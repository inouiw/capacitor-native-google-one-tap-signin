{
  "name": "capacitor-native-google-one-tap-signin",
  "version": "0.5.2",
  "description": "Google One Tap sign-in plugin for capacitor.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorNativeGoogleOneTapSignin.podspec"
  ],
  "author": "David Neuy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inouiw/capacitor-native-google-one-tap-signin.git"
  },
  "bugs": {
    "url": "https://github.com/inouiw/capacitor-native-google-one-tap-signin/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "google",
    "auth",
    "onetap",
    "onetapsignin",
    "googlesignin",
    "angular",
    "vue",
    "react",
    "ionic"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api GoogleOneTapAuthPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "buildall": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js && (cd ./demo/react && npm run build && npx cap sync --inline && cd -)",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^4.6.2",
    "@capacitor/cli": "^4.6.2",
    "@capacitor/core": "^4.6.2",
    "@capacitor/docgen": "^0.2.1",
    "@capacitor/ios": "^4.6.2",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^2.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@types/gapi": "^0.0.44",
    "@types/gapi.auth2": "^0.0.57",
    "@types/google-one-tap": "^1.2.2",
    "eslint": "^7.32.0",
    "prettier": "^2.8.3",
    "prettier-plugin-java": "^2.0.0",
    "rimraf": "^4.1.2",
    "rollup": "^2.32.0",
    "swiftlint": "^1.0.1",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^4"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "@types/scriptjs": "^0.0.2",
    "jwt-decode": "^3.1.2",
    "scriptjs": "^2.5.9"
  }
}
